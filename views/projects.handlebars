<div id='projects_page'>
  <section id='proj_sidebar'>
    <nav id='proj_menu'>
      {{#each projects}}
        {{#with this}}
          <h2>{{genre}}</h2>
          <ul class='proj_genre'>
            {{#each proj}}
              {{#with this}}
                <li id='{{text_slug}}' class='proj_link'>{{title}}</li>
              {{/with}}
            {{/each}}
          </ul>
        {{/with}}
      {{/each}}
    </nav>
  </section>
  <article id='proj_details'>
    <h2 id='proj_title'></h2>
    <h3 id='proj_short_text'></h3>
    <section id='proj_long_text'>
    </section>
  </article>
</div>
